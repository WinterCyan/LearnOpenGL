#version 330 core
layout (triangles) in;
layout (line_strip, max_vertices = 6) out;

in VS_OUT {
    vec3 norm;
} gs_in[];

void generate(int index){
    gl_Position = gl_in[index].gl_Position;
    EmitVertex();
    gl_Position = gl_in[index].gl_Position + vec4(gs_in[index].norm, 1.) * .2;
    EmitVertex();
    EndPrimitive();
}

void main() {
    generate(0);
    generate(1);
    generate(2);
}

